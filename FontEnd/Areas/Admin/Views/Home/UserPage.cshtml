<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/material-components-web/14.0.0/material-components-web.min.js"></script>
<script src="https://cdn.datatables.net/2.1.4/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.1.4/js/dataTables.material.js"></script>
<link href="~/css/tables.css" rel="stylesheet" />

<div class="container-top" id="userContainer">
    <div class="ImportFile">
        <button type="button" data-bs-toggle="modal" aria-expanded="false" data-bs-target="#createUser">
            Thêm
        </button>
        <button id="btn-hdimport">File Import Mẫu</button>
        <button id="btn-import">Import Excel</button>
        <input type="file" id="fileInput" accept=".xlsx" />
    </div>
    <div class="container-content">
   
        <table id="userTable">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Họ và tên</th>
                    <th>Email</th>
                    <th>Giới tính</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Ảnh</th>
                    <th>Sửa</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dữ liệu sẽ được chèn vào đây -->
            </tbody>
        </table>
        <br />
    </div>
    <div class="modal" tabindex="-1" id="createUser">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Thêm Mới Người Dùng</h5>
                    <div>
                        <button type="button" class="btn btn-modal-confirm btn-create-user" id="modalConfirmBtn">Thêm</button>
                        <button type="button" class="btn btn-modal-close" data-bs-dismiss="modal">Đóng</button>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="userClass">
                        <form id="userForm">
                            <div class="mb-4">
                                <label for="eIName" class="form-label">Họ và tên<span style="color:red">*</span>:</label>
                                <input type="text" class="form-control" id="eIName">
                            </div>
                            <div class="mb-4">
                                <div id="nameError" style="color: red; display: none; margin-left: 20%;"></div>
                            </div>
                            <div class="mb-4">
                                <label for="eIEmail" class="form-label">Email<span style="color:red">*</span>:</label>
                                <input type="email" class="form-control" id="eIEmail">
                            </div>
                            <div class="mb-4">
                                <div id="emailError" style="color: red; display: none; margin-left: 20%;"></div>
                            </div>
                            <div class="mb-4">
                                <label for="eIPass" class="form-label">Mật khẩu<span style="color:red">*</span>:</label>
                                <input type="text" class="form-control" id="eIPass">

                            </div>
                            <div class="mb-4">
                                <div id="passwordError" style="color: red; display: none; margin-left: 20%;"></div>
                            </div>
                            <div class="mb-gender">
                                <label class="form-label">Giới tính<span style="color:red">*</span>:</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="gender-male">
                                    <label class="form-check-label" for="gender-male">Nam</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="gender-female">
                                    <label class="form-check-label" for="gender-female">Nữ</label>
                                </div>
                            </div>
                            <div class="mb-4">
                                <div id="genderError" style="color: red; display: none; margin-left: 20%;"></div>
                            </div>
                            <div class="mb-4">
                                <label for="eIAddress" class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" id="eIAddress">
                            </div>
                            <div class="mb-4">
                                <label for="eIPhone" class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" id="eIPhone">
                            </div>
                            <div class="mb-4">
                                <label for="imagePath">Chọn ảnh</label>
                                <input type="file" class="form-control" id="imagePath" accept="image/*">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
<script src="~/js/admin/user.js"></script>